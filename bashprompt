set_prompt (){
red="\[\033[38;5;1m\]"
green="\[\033[38;5;10m\]"
yellow="\[\033[38;5;11m\]"
grape="\[\033[38;5;92m\]"
strawberry="\[\033[38;5;9m\]"
mellon="\[\033[38;5;162m\]"
name="$redğŸ’$space$greenğŸ$space$redğŸ“$space$color4"
host="$color3\h$color4"
path="$color5\w$color4"
reset="\[\e[0m\]"
blink="\[\e[5;33m\]"
symbol[0]="$redğŸ’ $reset"
symbol[1]="$greenğŸ $reset"
symbol[2]="$strawberryğŸ“ $reset"
symbol[3]="$grapeğŸ‡ $reset"
symbol[4]="$mellonğŸ‰ $reset"
n1=$(($RANDOM%5))
n2=$(($RANDOM%5))
n3=$(($RANDOM%5))
win=0
winst=""
if ((($n1==$n2) || ($n1==$n3) || ($n2==$n3))); 
    then 
    win=10;
    CASH=$(($CASH+$win))
    winst=" $yellowâ­$reset"
fi 

if ((($n1==$n2) && ($n1==$n3))); 
    then 
    win=$((100*($n1+1)));
    CASH=$(($CASH+$win))
    winst=" $yellowğŸŒŸ $winğŸŒŸ $reset"
fi 


CASH=$(($CASH-10))
PS1="[${symbol[$n1]}${symbol[$n2]}${symbol[$n3]}]$winst $greenğŸ’µ $reset:$yellow$CASH$reset $yellowğŸ“‚ $path â© $reset"
}    
CASH=1000   
PROMPT_COMMAND='set_prompt'   
